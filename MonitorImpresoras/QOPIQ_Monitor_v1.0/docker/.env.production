# QOPIQ Monitor de Impresoras - Variables de Entorno Producción

# Base de Datos PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=qopiq_monitor
DB_USER=qopiq_user
DB_PASSWORD=QOPiQ2024!SecurePassword

# JWT Configuration
JWT_SECRET_KEY=QOPiQ-Monitor-JWT-Secret-Key-2024-Production-Min32Chars
JWT_ISSUER=https://qopiq-monitor.com
JWT_AUDIENCE=qopiq-monitor-users
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# URLs de Aplicación
API_BASE_URL=https://api.qopiq-monitor.com
FRONTEND_URL=https://qopiq-monitor.com
AGENT_DASHBOARD_URL=https://agent.qopiq-monitor.com

# Redis Cache
REDIS_PASSWORD=QOPiQ2024!RedisSecure
REDIS_CONNECTION_STRING=redis:6379

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@qopiq-monitor.com
SMTP_PASSWORD=your_email_app_password
SMTP_FROM_EMAIL=notifications@qopiq-monitor.com
SMTP_FROM_NAME=QOPIQ Monitor

# Logging
LOG_LEVEL=Information
LOG_FILE_PATH=/app/logs/qopiq-monitor.log

# Security Headers
CORS_ORIGINS=https://qopiq-monitor.com,https://agent.qopiq-monitor.com
ALLOWED_HOSTS=qopiq-monitor.com,api.qopiq-monitor.com,agent.qopiq-monitor.com

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/qopiq-monitor.crt
SSL_KEY_PATH=/etc/nginx/ssl/qopiq-monitor.key

# Monitoring
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# Agent Configuration
AGENT_API_KEY=QOPiQ-Agent-API-Key-2024-Production
AGENT_HEARTBEAT_INTERVAL=30
AGENT_TIMEOUT_SECONDS=300
