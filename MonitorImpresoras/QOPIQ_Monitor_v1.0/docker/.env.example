# QOPIQ Monitor - Variables de Entorno de Ejemplo
# Copie este archivo como .env y configure los valores según su entorno

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=qopiq_monitor
DB_USER=qopiq_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# =============================================================================
# CONFIGURACIÓN JWT
# =============================================================================
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_32_CHAR_KEY
JWT_ISSUER=https://your-domain.com
JWT_AUDIENCE=qopiq-monitor-users
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# =============================================================================
# URLS DE APLICACIÓN
# =============================================================================
API_BASE_URL=https://api.your-domain.com
FRONTEND_URL=https://your-domain.com
AGENT_DASHBOARD_URL=https://agent.your-domain.com

# =============================================================================
# CONFIGURACIÓN REDIS
# =============================================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_CONNECTION_STRING=redis:6379

# =============================================================================
# CONFIGURACIÓN SMTP (OPCIONAL)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=notifications@your-domain.com
SMTP_FROM_NAME=QOPIQ Monitor

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================
LOG_LEVEL=Information
LOG_FILE_PATH=/app/logs/qopiq-monitor.log

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================
CORS_ORIGINS=https://your-domain.com,https://agent.your-domain.com
ALLOWED_HOSTS=your-domain.com,api.your-domain.com,agent.your-domain.com

# =============================================================================
# CONFIGURACIÓN SSL/TLS (PRODUCCIÓN)
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/your-domain.crt
SSL_KEY_PATH=/etc/nginx/ssl/your-domain.key

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
ENABLE_DETAILED_ERRORS=false

# =============================================================================
# CONFIGURACIÓN DEL AGENTE
# =============================================================================
AGENT_API_KEY=CHANGE_THIS_AGENT_API_KEY
AGENT_HEARTBEAT_INTERVAL=30
AGENT_TIMEOUT_SECONDS=300

# =============================================================================
# CONFIGURACIÓN DE CARACTERÍSTICAS
# =============================================================================
ENABLE_SIGNALR=true
ENABLE_REDIS_CACHE=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SWAGGER_UI=true

# =============================================================================
# CONFIGURACIÓN DE LÍMITES
# =============================================================================
MAX_PRINTERS_PER_COMPANY=1000
MAX_USERS_PER_COMPANY=100
MAX_FILE_UPLOAD_SIZE_MB=10

# =============================================================================
# CONFIGURACIÓN DE BACKUP (OPCIONAL)
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
