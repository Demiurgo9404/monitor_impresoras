@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-bar px-4">
            <div class="brand">QOPIQ Monitor</div>
            <div class="user-info">
                <AuthorizeView>
                    <Authorized>
                        <span class="me-2">@context.User.Identity?.Name</span>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="Logout">Salir</button>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="btn btn-sm btn-primary">Iniciar sesi√≥n</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <div class="content px-4 py-3">
            @Body
        </div>
    </main>
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = null!;
    [Inject] private IAuthService AuthService { get; set; } = null!;
    [CascadingParameter] private Task<AuthenticationState>? authenticationState { get; set; }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login");
    }
}
