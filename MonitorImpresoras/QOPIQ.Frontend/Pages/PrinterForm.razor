@page "/printers/form"
@using QOPIQ.Application.DTOs
@using QOPIQ.Domain.Enums

<EditForm Model="@Printer" OnValidSubmit="@SavePrinter">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Nombre</label>
        <InputText @bind-Value="Printer.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Dirección IP</label>
        <InputText @bind-Value="Printer.IpAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ubicación</label>
        <InputText @bind-Value="Printer.Location" class="form-control" />
    </div>

    <div class="form-group">
        <label>Estado</label>
        <InputSelect @bind-Value="Printer.Status" class="form-select">
            @foreach (var status in Enum.GetValues<PrinterStatus>())
            {
                <option value="@status">@status</option>
            }
        </InputSelect>
    </div>

    <button class="btn btn-primary mt-3" type="submit">Guardar</button>
</EditForm>

@code {
    [Parameter] public PrinterDto Printer { get; set; } = new();

    private async Task SavePrinter()
    {
        Console.WriteLine($"Impresora guardada: {Printer.Name}");
    }
}
