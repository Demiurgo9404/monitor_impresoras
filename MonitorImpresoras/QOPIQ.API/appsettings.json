{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=QOPIQ;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Key": "your-very-secure-jwt-key-here",
    "Issuer": "QOPIQ.API",
    "Audience": "QOPIQ.Client",
    "ExpireDays": 30
  },
  "Snmp": {
    "Community": "public",
    "Timeout": 3000,
    "Retries": 2
  }
}
