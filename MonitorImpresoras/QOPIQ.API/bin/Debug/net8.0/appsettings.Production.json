{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*.qopiq.com;qopiq.com",
  "AllowedOrigins": "https://app.qopiq.com;https://dashboard.qopiq.com",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true;Pooling=true;Maximum Pool Size=100;",
    "Redis": "${REDIS_CONNECTION_STRING}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "QOPIQ.API.Production",
    "Audience": "QOPIQ.Client.Production",
    "ExpirationInMinutes": 30,
    "RefreshTokenExpirationInDays": 3
  },
  "Snmp": {
    "Version": "V3",
    "Community": "${SNMP_COMMUNITY}",
    "Timeout": 1500,
    "Retries": 2,
    "AllowedIPs": ["${ALLOWED_NETWORK_RANGE}"],
    "V3": {
      "UserName": "${SNMP_V3_USERNAME}",
      "AuthProtocol": "SHA",
      "AuthKey": "${SNMP_V3_AUTH_KEY}",
      "PrivacyProtocol": "AES",
      "PrivacyKey": "${SNMP_V3_PRIV_KEY}"
    }
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": 60,
    "QueueLimit": 10
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "QOPIQ": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/qopiq-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}
