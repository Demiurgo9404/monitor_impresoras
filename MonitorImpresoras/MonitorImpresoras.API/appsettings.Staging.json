{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "MonitorImpresoras": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=staging-db.monitorimpresoras.com;Port=5432;Database=MonitorImpresoras_Staging;Username=postgres;Password=${DB_PASSWORD};"
  },
  "JWT": {
    "Issuer": "MonitorImpresoras.Staging",
    "Audience": "MonitorImpresoras.Users.Staging",
    "Key": "${JWT_KEY}",
    "TokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 3
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": "587",
    "UseSsl": true,
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "FromName": "Monitor Impresoras (Staging)",
    "FromAddress": "noreply@staging.monitorimpresoras.com"
  },
  "Reports": {
    "MaxConcurrentExecutions": 3,
    "DefaultFormat": "json",
    "RetentionDays": 14,
    "MaxFileSizeMB": 10,
    "CleanupSchedule": "0 3 * * *",
    "EnableScheduledReports": true
  },
  "Observability": {
    "Prometheus": {
      "Enabled": true,
      "Endpoint": "/metrics"
    },
    "HealthChecks": {
      "Enabled": true,
      "Endpoints": "/health,/health/extended,/health/secure"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=staging-db.monitorimpresoras.com;Port=5432;Database=MonitorImpresoras_Staging;Username=postgres;Password=${DB_PASSWORD};",
          "tableName": "SystemEvents",
          "needAutoCreateTable": true,
          "batchSizeLimit": 100,
          "period": "00:00:05"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "MonitorImpresoras",
      "Environment": "Staging"
    }
  }
}
