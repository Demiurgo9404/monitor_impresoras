{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "MonitorImpresoras": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=prod-db.monitorimpresoras.com;Port=5432;Database=MonitorImpresoras_Production;Username=postgres;Password=${DB_PASSWORD};Pooling=true;Minimum Pool Size=5;Maximum Pool Size=20;Connection Lifetime=300;"
  },
  "JWT": {
    "Issuer": "MonitorImpresoras.Production",
    "Audience": "MonitorImpresoras.Users.Production",
    "Key": "${JWT_KEY}",
    "TokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 1
  },
  "Email": {
    "SmtpHost": "smtp.office365.com",
    "SmtpPort": "587",
    "UseSsl": true,
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "FromName": "Monitor Impresoras",
    "FromAddress": "noreply@monitorimpresoras.com"
  },
  "Reports": {
    "MaxConcurrentExecutions": 5,
    "DefaultFormat": "json",
    "RetentionDays": 30,
    "MaxFileSizeMB": 10,
    "CleanupSchedule": "0 2 * * *",
    "EnableScheduledReports": true
  },
  "Observability": {
    "Prometheus": {
      "Enabled": true,
      "Endpoint": "/metrics"
    },
    "HealthChecks": {
      "Enabled": true,
      "Endpoints": "/health,/health/extended,/health/secure,/health/ready,/health/live"
    }
  },
  "AllowedHosts": "monitorimpresoras.com,api.monitorimpresoras.com",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error",
        "MonitorImpresoras": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=prod-db.monitorimpresoras.com;Port=5432;Database=MonitorImpresoras_Production;Username=postgres;Password=${DB_PASSWORD};",
          "tableName": "SystemEvents",
          "needAutoCreateTable": false,
          "batchSizeLimit": 100,
          "period": "00:00:05"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "MonitorImpresoras",
      "Environment": "Production"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      },
      "Https": {
        "Url": "https://0.0.0.0:443",
        "Certificate": {
          "Path": "/etc/ssl/certs/monitorimpresoras.crt",
          "KeyPath": "/etc/ssl/private/monitorimpresoras.key"
        }
      }
    }
  }
}
