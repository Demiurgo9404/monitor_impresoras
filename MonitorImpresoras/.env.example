# Configuración de Base de Datos
DB_HOST=postgres
DB_PORT=5432
DB_NAME=monitor_impresoras
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here

# Configuración JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_ISSUER=https://monitor-impresoras.com
JWT_AUDIENCE=monitor-impresoras-users

# URLs de Frontend
FRONTEND_URL=https://monitor-impresoras.com
AGENT_DASHBOARD_URL=https://agent.monitor-impresoras.com

# Redis (Opcional)
REDIS_PASSWORD=your_redis_password_here

# Configuración de Email (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@monitor-impresoras.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=Monitor de Impresoras <noreply@monitor-impresoras.com>

# Configuración de la aplicación
APP_NAME=Monitor de Impresoras
APP_VERSION=1.0.0
APP_ENVIRONMENT=Production

# Configuración de logs
LOG_LEVEL=Information
LOG_RETENTION_DAYS=30

# Configuración de seguridad
ENABLE_SWAGGER=false
ENABLE_DETAILED_ERRORS=false
CORS_ORIGINS=https://monitor-impresoras.com,https://app.monitor-impresoras.com

# Configuración de SSL
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/certificate.crt
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/private.key

# Configuración de monitoreo
HEALTH_CHECK_INTERVAL=30
METRICS_RETENTION_DAYS=90

# Configuración de PrinterAgent
AGENT_DEFAULT_API_KEY=default-agent-api-key-change-this
AGENT_REGISTRATION_ENABLED=true
AGENT_MAX_CONCURRENT_CONNECTIONS=100
