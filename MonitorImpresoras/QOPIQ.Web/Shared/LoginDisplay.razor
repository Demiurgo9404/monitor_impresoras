@inject AuthService AuthService
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center">
            <div class="dropdown">
                <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-user"></i>
                    <span class="ms-2">@context.User.Identity?.Name</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <div class="dropdown-item-text">
                            <div class="fw-bold">@context.User.Identity?.Name</div>
                            <small class="text-muted">@context.User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")?.Value</small>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <div class="dropdown-item-text">
                            <small class="text-muted">Rol:</small>
                            <span class="badge bg-secondary ms-1">@GetUserRole(context.User)</span>
                        </div>
                    </li>
                    <li>
                        <div class="dropdown-item-text">
                            <small class="text-muted">Tenant:</small>
                            <span class="badge bg-info ms-1">@context.User.FindFirst("tenant_id")?.Value</span>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <button class="dropdown-item" @onclick="BeginLogout">
                            <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="/login" class="btn btn-primary">
            <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
        </a>
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task BeginLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", true);
    }

    private string GetUserRole(System.Security.Claims.ClaimsPrincipal user)
    {
        var role = user.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")?.Value;
        return role switch
        {
            "SuperAdmin" => "Super Admin",
            "CompanyAdmin" => "Admin Empresa",
            "ProjectManager" => "Gestor Proyecto",
            "Viewer" => "Visualizador",
            _ => role ?? "Usuario"
        };
    }
}

