@inject ApiService ApiService

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card metric-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="metric-icon primary me-3">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="metric-value">@(stats?.TotalReports ?? 0)</div>
                        <div class="metric-label">Total Reportes</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card metric-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="metric-icon success me-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="metric-value">@GetStatusCount("Generated")</div>
                        <div class="metric-label">Generados</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card metric-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="metric-icon info me-3">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="metric-value">@GetStatusCount("Sent")</div>
                        <div class="metric-label">Enviados</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card metric-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="metric-icon warning me-3">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="metric-value">@GetStatusCount("Failed")</div>
                        <div class="metric-label">Fallidos</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public ReportStats? stats { get; set; }

    private int GetStatusCount(string status)
    {
        return stats?.ReportsByStatus?.GetValueOrDefault(status, 0) ?? 0;
    }
}

